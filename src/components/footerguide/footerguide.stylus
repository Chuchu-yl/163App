.footcontainer
  width 100%
  height 98px
  position fixed
  bottom 0
  left 0
  display flex
  align-items center
  border-top 1px solid #ccc
  z-index 999
  background-color #fff
  .guide_item
    flex 1
    &.on
      color #B4282D
    span 
      display flex
      align-items center
      flex-direction column
      font-size 24px
    .item_icon
      margin-bottom 10px
      .iconfont
        width 40px
        height 40px
        display inline-block
        font-size 40px